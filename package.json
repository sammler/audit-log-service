{
  "name": "log-service",
  "version": "0.0.5",
  "description": "Simple logging service for sammler.",
  "license": "MIT",
  "author": "Stefan Walther",
  "main": "index.js",
  "repository": "https://github.com/sammler/log-service",
  "scripts": {
    "d-build": "docker build -t sammlerio/log-service .",
    "d-run": "docker run -it sammlerio/log-service",
    "dc-down:dev": "docker-compose --f=./docker-compose.dev.yml down",
    "dc-up:dev": "docker-compose --f=./docker-compose.dev.yml up",
    "dc-up:devb": "docker-compose --f=./docker-compose.dev.yml up --build",
    "docs": "npm run swagger-markdown && verb",
    "lint": "npm run lint:src && npm run lint:test",
    "lint:fix": "npm run lint:src:fix && npm run lint:test:fix",
    "lint:src": "eslint src",
    "lint:src:fix": "eslint src --fix",
    "lint:test": "eslint test",
    "lint:test:fix": "eslint test --fix",
    "start": "node ./src/index.js",
    "start:dev": "nodemon -L --watch ./src --exec npm run start",
    "swagger-markdown": "node_modules/.bin/swagger-markdown -i src/config/api-docs.yml -o docs/api-docs.md",
    "test": "npm run lint && npm run test:integration",
    "test:integration": "mocha './test/integration/**/*.spec.js' --require './test/mocha.conf.js' --timeout 6000",
    "test:unit": "mocha './test/unit/**/*.spec.js' --require './test/mocha.conf.js'"
  },
  "dependencies": {
    "amqplib": "^0.5.2",
    "bluebird": "^3.4.7",
    "body-parser": "^1.18.2",
    "compression": "^1.6.2",
    "express": "^4.16.2",
    "express-result": "^0.1.0",
    "helmet": "^3.6.1",
    "http-status-codes": "^1.3.0",
    "js-yaml": "^3.10.0",
    "lodash": "^4.17.4",
    "mongoose": "^4.9.5",
    "mongoose-connection-promise": "^0.2.0",
    "sammler-nodelib-logger": "sammler/sammler-nodelib-logger",
    "swagger-ui-express": "^2.0.0",
    "winster": "^0.2.7"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "eslint": "4.19.1",
    "eslint-config-space-single": "0.3.3",
    "eslint-plugin-mocha": "4.12.1",
    "isparta": "4.0.0",
    "mocha": "3.5.3",
    "supertest": "3.0.0",
    "swagger-markdown": "1.1.1"
  },
  "engines": {
    "node": ">=7.2"
  },
  "verb": {
    "run": true,
    "toc": false,
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "related": {
      "list": []
    },
    "lint": {
      "reflinks": true
    },
    "reflinks": [
      "verb",
      "verb-readme-generator"
    ]
  },
  "winster": {
    "configFile": "./src/config/winster-config.js"
  }
}

{
  "name": "log-service",
  "version": "0.0.5",
  "description": "Simple logging service for sammler.",
  "license": "MIT",
  "author": "Stefan Walther",
  "main": "index.js",
  "repository": "https://github.com/sammler/log-service",
  "scripts": {
    "d-build": "docker build -t sammler/log-service .",
    "dc-dev-down": "docker-compose --f=./docker-compose.dev.yml down",
    "dc-dev-up": "docker-compose --f=./docker-compose.dev.yml up --build",
    "docs": "yarn swagger-markdown && verb",
    "lint": "yarn lint:src && yarn lint:test",
    "lint:fix": "yarn lint:src:fix && yarn lint:test:fix",
    "lint:src": "eslint src",
    "lint:src:fix": "eslint src --fix",
    "lint:test": "eslint test",
    "lint:test:fix": "eslint test --fix",
    "start": "node ./src/index.js",
    "start:dev": "nodemon -L --watch ./src --exec yarn start",
    "swagger-markdown": "node_modules/.bin/swagger-markdown -i src/config/api-docs.yml -o docs/api-docs.md",
    "test": "yarn lint && yarn test:integration",
    "test:integration": "mocha './test/integration/**/*.spec.js' --require './test/mocha.conf.js' --timeout 6000",
    "test:unit": "mocha './test/unit/**/*.spec.js' --require './test/mocha.conf.js'"
  },
  "dependencies": {
    "amqplib": "^0.5.1",
    "bluebird": "^3.4.7",
    "body-parser": "^1.17.2",
    "compression": "^1.6.2",
    "express": "^4.15.3",
    "express-result": "^0.1.0",
    "helmet": "^3.6.1",
    "http-status-codes": "^1.0.6",
    "js-yaml": "^3.8.4",
    "lodash": "^4.17.4",
    "mongoose": "^4.9.5",
    "mongoose-connection-promise": "^0.1.2",
    "sammler-nodelib-logger": "sammler/sammler-nodelib-logger",
    "swagger-ui-express": "^2.0.0",
    "winster": "^0.2.5"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "eslint": "^3.19.0",
    "eslint-config-space-single": "^0.2.0",
    "eslint-plugin-mocha": "^4.8.0",
    "isparta": "^4.0.0",
    "mocha": "^3.4.1",
    "supertest": "^3.0.0",
    "swagger-markdown": "^1.0.0"
  },
  "engines": {
    "node": ">=7.2"
  },
  "verb": {
    "run": true,
    "toc": false,
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "related": {
      "list": []
    },
    "lint": {
      "reflinks": true
    },
    "reflinks": [
      "verb",
      "verb-readme-generator"
    ]
  },
  "winster": {
    "configFile": "./src/config/winster-config.js"
  }
}
